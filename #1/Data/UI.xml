	<Group name="menu">
		
		<Button x="0" y="0"
				width="64" height="32"
				justify="center" vjustify="center"
				path="TinyAdventurePack/UI/border.png"
				id="start_game"
				visible="True">
			<Anchor x="0.5" y="0.5"/>
			<Font text="Start" size="16" justify="center" vjustify="center"/>
			<Action onClick="LoadingSaves" pressed="TinyAdventurePack/UI/pressed.png"/>
		</Button>

		<Button x="-40" y="40"
				width="48" height="24"
				justify="center" vjustify="center"
				path="TinyAdventurePack/UI/border.png"
				id="volume_up"
				visible="True">
			<Anchor x="0.5" y="0.5"/>
			<Font text="Vol +" size="16" justify="center" vjustify="center"/>
			<Action onClick="VolUp" pressed ="TinyAdventurePack/UI/pressed.png"/>
		</Button>

		<Button x="40" y="40"
				width="48" height="24"
				justify="center" vjustify="center"
				path="TinyAdventurePack/UI/border.png"
				id="volume_down"
				visible="True">
			<Anchor x="0.5" y="0.5"/>
			<Font text="Vol -" size="16" justify="center" vjustify="center"/>
			<Action onClick="VolDown" pressed ="TinyAdventurePack/UI/pressed.png"/>
		</Button>

		<Text x="0" y="0"
			  width="320" height="64"
			  justify="center" vjustify="center"
			  id="menutxt_status">
			<Anchor x="0.5" y="0.5"/>
			<Font text="Loading..." size="64" justify="center" vjustify="center"/>
		</Text>

		<Text x="0" y="0"
			  width="320" height="64"
			  justify="center" vjustify="center"
			  id="menutxt_choose">
			<Anchor x="0.5" y="0.25"/>
			<Font text="Choose One" size="64" color="0,64,0" justify="center" vjustify="center"/>
		</Text>

		<Button x="0" y="0"
				width="320" height="64"
				justify="center" vjustify="center"
				path="TinyAdventurePack/UI/border.png"
				id="save1">
			<Anchor x="0.5" y="0.45"/>
			<Font text="New World" size="48" justify="center" vjustify="center"/>
			<Action onClick="StartingGame" args="0" pressed="TinyAdventurePack/UI/pressed.png"/>
		</Button>

		<Button x="0" y="0"
				width="320" height="64"
				justify="center" vjustify="center"
				path="TinyAdventurePack/UI/border.png"
				id="save2">
			<Anchor x="0.5" y="0.6"/>
			<Font text="New World" size="48" justify="center" vjustify="center"/>
			<Action onClick="StartingGame" args="1" pressed="TinyAdventurePack/UI/pressed.png"/>
		</Button>

